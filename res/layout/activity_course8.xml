<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >



        <Button
            android:id="@+id/courses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="Courses"
            android:textSize="15dp" />

        <Button
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="Map"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- Put image and number here -->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree Program Offerings"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/fiveyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Five-year program leading to:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />


            <TextView
                android:id="@+id/course8.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Civil Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            
            <TextView
                android:id="@+id/course8.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Chemical Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            
            
            <TextView
                android:id="@+id/course8.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Mechanical Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            
            
            <TextView
                android:id="@+id/course8.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Electrical Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            
            
            <TextView
                android:id="@+id/course8.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Electronics Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
               />

            
            
            <TextView
                android:id="@+id/course8.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Industrial Engineering"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
                android:id="@+id/fouryears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Four-year programs leading to:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
                android:id="@+id/course8.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Computer Science"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            
            
            <TextView
                android:id="@+id/course8.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Information Technology"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            
            
            <TextView
                android:id="@+id/course8.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS Information Systems"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            



        </LinearLayout>
    </ScrollView>

</LinearLayout>