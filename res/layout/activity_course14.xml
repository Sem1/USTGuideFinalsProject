            <TextView
                android:id="@+id/course1.13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bachelor of Music in Musical Theatre"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

           
            
            <TextView
                android:id="@+id/course1.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bachelor of Music in Music Technology"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            



        </LinearLayout>
    </ScrollView>

</LinearLayout>